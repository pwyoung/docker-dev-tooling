#!/bin/bash

TMPFILE=~/.tmp_file_aws.txt

IMAGE="aws-tools:latest"

# Run once and terminate
DARGS="-t -i --rm"

# Share files here
DARGS+=" -v /home/dev:/home/dev"

# Specify the command to run, aws cli version 2
CMD="/usr/local/bin/aws-v2"

docker run $DARGS $IMAGE $CMD $@ > $TMPFILE

# Fix hosed output, and keep results
cat $TMPFILE | dos2unix



